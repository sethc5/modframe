{
  "_comment": "Schema for outline.md. Read by scripts/validate_completeness.py. Edit rules here; the validator picks them up automatically.",

  "required_headings": [
    "Actors and roles",
    "Process map",
    "Where power concentrates",
    "Common failure modes",
    "What evidence would prove",
    "Suggested sources",
    "Episode outline"
  ],

  "template_placeholders": [
    "Briefly explain how this mechanism works",
    "Describe the operational lever clearly",
    "Primary institutional actors and their incentives",
    "Oversight actors and their constraints",
    "Documents, datasets, audits, and public records",
    "Statutes and regulations",
    "Oversight reports (GAO/OIG",
    "Official datasets and disclosures",
    "Structure (what it is)",
    "Incentive (why it behaves as it does)",
    "Example (case study)",
    "Evidence (what to show)",
    "Levers (how accountability/reform could work)"
  ],

  "placeholder_hit_threshold": 3,

  "claim_labels": {
    "observed": "[Observed]",
    "inferred": "[Inferred]",
    "hypothesis": "[Hypothesis]"
  },

  "word_count_targets": {
    "summary_min_sentences": 2,
    "summary_max_sentences": 4,
    "actors_min_words": 80,
    "process_min_steps": 3,
    "sources_min_entries": 3
  }
}
