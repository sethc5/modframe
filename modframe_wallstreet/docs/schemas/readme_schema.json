{
  "_comment": "Schema for topic README.md files. Read by scripts/validate_completeness.py.",

  "required_fields": ["Status", "Tags"],

  "valid_statuses": [
    "empty",
    "scaffolded",
    "draft",
    "sourced",
    "reviewed",
    "published"
  ],

  "recommended_tags": [
    "mechanics",
    "institutions",
    "accountability",
    "incentives",
    "oversight",
    "transparency",
    "money",
    "elections",
    "media",
    "judiciary",
    "executive",
    "legislative",
    "state-level",
    "international",
    "crisis",
    "lobbying",
    "regulation",
    "appointments",
    "foreign-influence"
  ],

  "metadata_fields": {
    "_comment": "Machine-readable metadata for graph/index builds. Parsed by scripts/validate_metadata.py.",
    "required_for_statuses": ["sourced", "reviewed", "published"],
    "actor_types": [
      "regulatory_body",
      "political_entity",
      "institution",
      "court",
      "committee",
      "office",
      "dataset_owner"
    ],
    "fields": {
      "related_modules": {
        "readme_key": "Related modules",
        "required": true,
        "format": "comma-separated 3-digit topic IDs",
        "example": "001, 013, 017"
      },
      "last_reviewed": {
        "readme_key": "Last reviewed",
        "required": true,
        "format": "YYYY-MM",
        "example": "2026-02"
      },
      "actors": {
        "readme_key": "Actors",
        "required": true,
        "format": "YAML-like list items under key",
        "example": "- name: Federal Election Commission\n  type: regulatory_body"
      },
      "statutes": {
        "readme_key": "Statutes",
        "required": true,
        "format": "YAML-like list items under key",
        "example": "- 52 U.S.C. ยง 30118"
      },
      "cases": {
        "readme_key": "Cases",
        "required": true,
        "format": "YAML-like list items under key",
        "example": "- Citizens United v. FEC, 558 U.S. 310 (2010)"
      },
      "case_study": {
        "readme_key": "Case study",
        "required": false,
        "format": "YAML-like object under key",
        "example": "name: Debt ceiling package\ndate: 2023-06\nactors:\n  - House leadership\noutcome: Passed with bipartisan coalition"
      },
      "reform_proposals": {
        "readme_key": "Reform proposals",
        "required": false,
        "format": "YAML-like list of objects",
        "example": "- name: Proposal Name\n  bill: H.R. 1234\n  congress: 118th\n  status: introduced\n  addresses_failure_mode: Opaque funding channels"
      },
      "data_sources": {
        "readme_key": "Data sources",
        "required": false,
        "format": "YAML-like list of objects",
        "example": "- source: FEC bulk data\n  format: csv\n  update_frequency: daily\n  url: https://www.fec.gov/data\n  accessibility: open"
      }
    }
  }
}
